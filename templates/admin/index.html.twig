

{% extends 'admin.header.html.twig' %}

{% block body %}

<h3 class="page-title">Events Management</h3>
   
    <p>
        <a href=" /create " class="btn btn-success">add_new</a>
        
    </p>


<h2 class="page-header"> Latest events </h2>
  <table class="table table-striped">
   <thead>
       <tr>
           <th>#</th>
           <th>Event</th>
           <th>Description</th>
           <th>Due Date</th>
           
       </tr>
   </thead>
{% for event in events %} {# making a loop in twig inside the variable todos #}
   <tbody>
       <tr>
           <th scope="row">{{event.id}}</th> 
           <td>{{event.title}}</td> 
           <td>{{event.description}}</td> 
           <td>{{event.startTime|date('F j, Y, g:i a')}}</td> {# the duedate of the event, when we want to print a date we must choose the format |date('F j, Y, g:i a') otherwise we will have error #}
           <td> <a href="/details/{{event.id}}" class="btn btn-xs btn-primary">View</a> {# a tag to go to the path /details/{{event.id}} so we send the id of the record with the path (like when we are using get method ) #}
                   
           <a href="/edit/{{event.id}}" class="btn btn-xs btn-primary">Edit</a>
           <a href="/delete/{{event.id}}" class="btn btn-xs btn-primary">Delete</a>        
           </td>
       </tr>
{% endfor %}
   </tbody>
   </table>
{% endblock %}
